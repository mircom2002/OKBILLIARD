    <body>


    <%= render :partial => 'main/brandMenu' %>

    <div class="section">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="text-center">Rank<br></h1>
                    <p class="text-center">We are a group of skilled individuals.</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <img src="/assets/emptyuser.png" class="center-block img-circle img-responsive">
                    <h3 class="text-center">John Doe</h3>
