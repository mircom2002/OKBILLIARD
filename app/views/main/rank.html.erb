                    <p class="text-center">Developer</p>
                    </div>
            </div>
        </div>
    </div>

    <%=@a%>

    <div class="section">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <table class="table table-striped" style="background-color:white;">
                        <thead>
                            <tr>
                                <th>이름</th>
                                <th>Avg.</th>
                                <th>총점수</th>
                                <th>전적</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% Okdb.all.each do |t| %>
                            <tr>
                                <td><%=t.name %></td>
                                <td><%=t.average%></td>
                                <td><%=t.allscore %></td>
                                <td><%=Scoreboard.where("winid = ?", t.id).count%>승<%=Scoreboard.where("loseid = ?", t.id).count%> 패</td>
                            </tr>
                            <% end %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
